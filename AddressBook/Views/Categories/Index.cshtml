@model IEnumerable<AddressBook.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-dark">Index</h1>

<p>
    <a class="btn btn-info" asp-action="Create">New Category</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-sm btn-secondary p-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-sm btn-secondary p-1" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-sm btn-secondary p-1" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
